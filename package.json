{
  "name": "type",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "commonjs", 
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "start:fast": "ts-node src/index.ts",
    "dev:fast": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint src/",  
    "format": "prettier --write src/"  
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.0",
    "eslint": "^8.56.0",     
    "prettier": "^3.2.5",    
    "@typescript-eslint/parser": "^7.7.1",  
    "@typescript-eslint/eslint-plugin": "^7.7.1"
  }
}